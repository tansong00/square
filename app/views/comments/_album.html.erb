<li class="clearfix">
  <h4>[<%= comment.commentable_type %>] <%= comment.resource.title %></h4>
  <div class="textblock">
    <%= link_to image_tag(comment.resource.cover.url), comment.resource %>
    <p class="description">
      <%= truncate h(comment.content), length: 80, omission: link_to('  ...', comment.resource), escape: false %>
    </p>
  </div>
</li>