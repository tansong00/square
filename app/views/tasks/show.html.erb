<div class="ui stackable items">
  <% @albums.each do |album| %>
      <div class="item">
        <div class="image">
          <%= image_tag album.cover.url %>
        </div>
        <div class="content">
          <div class="name"><%= album.sku %></div>
          <p class="description"><%= album.title %></p>
        </div>
      </div>
  <% end %>
</div>

<div class="ui grid stackable">
  <div class="twelve wide column content">
    <div class="square comments clearfix" id="comments">

      <% @comments.each do |comment| %>
          <div class="subtitle">
            <%= comment.created_at.strftime('%Y-%m-%d  %H:%M') %>
          </div>
          <div class="comment clearfix">
            <div class="arrow1"></div>
            <div class="arrow2" style="border-right-color:#424351;"></div>
            <div class="replyicon">
              <div class="boardiconbox pie">
                <div  style="background-color:#424351;height: 64px;width: 64px;"></div>
              </div>
              <div class="username"><%= comment.user.try(:username) || 'No name' %></div>
            </div>
            <div class="replyvalueout">
              <div class="replyvalue pie" style="background-color:#424351"><%= comment.content %></div>
            </div>
          </div>
      <% end %>

      <div class="comment">
        <%= form_for @new_comment do |f| %>
            <%= hidden_field_tag :id, @task.id %>
            <%= hidden_field_tag :type, 'task' %>

            <div class="ui form">
              <div class="field">
                <label>写下你的留言</label>
                <%= f.text_area :content %>
              </div>
              <%= f.submit '提 交', class: 'square button large' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four column wide">
    <div class="ui stacked segment">
      <div class="ui statistic">
        <div class="number"><%= @attachments.size %></div>
        <div class="description">相关附件</div>
      </div>
      <div class="ui divided selection list square center" data-no-turbolink>
        <% @attachments.each do |attach| %>
            <%= link_to attach.file.file.filename, download_attachment_path(attach), class: 'item req_log' %>
        <% end %>
        <%= link_to '上传附件', new_attach_task_path(@task) , class: 'item req_log', id: 'for_newattach' %>
      </div>
    </div>
  </div>
</div>