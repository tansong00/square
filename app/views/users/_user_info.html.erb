<div class="ui form">
  <%= form_for @user do |f| %>
      <div class="field disabled">
        <%= f.label :username %>
        <div class="ui left labeled icon input">
          <%= f.text_field :username, disabled: :disabled %>
          <i class="user icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :email %>
        <div class="ui left labeled icon input">
          <%= f.text_field :email %>
          <i class="mail icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :password %>
        <div class="ui left labeled icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <div class="ui left labeled icon input">
          <%= f.password_field :password_confirmation %>
          <i class="lock icon"></i>
        </div>
      </div>

      <div class="field square comments clearfix bubble-selects">
        <%= f.label :bubble_color, '留言气泡颜色' %>
        <%= f.hidden_field :bubble_color %>
      </div>

      <div>
        <% Settings.bubble_colors.each do |c| %>
            <%= content_tag :span, semantic_icon(:checkmark), class: %w(ui label bubble-select).push(@bubble_color == c ? 'checked' : nil),
                            style: "background-color: #{c}", 'data-color' => c %>
        <% end %>
      </div>

      <div class="square center" style="margin-top: 30px;">
        <a class="square button large" id="for_update_userinfo">提交</a>
      </div>
  <% end %>
</div>