<div class="ui grid stackable">
  <div class="twelve wide column content">
    <%= render 'comments/comments', comments: @comments, instance: @album, type: 'album' %>
  </div>
  <div class="four column wide">
    <div class="ui vertical menu">
      <a class="active item">
        <i class="flickr icon"></i> 留言&讨论
      </a>
    </div>

    <div class="ui stacked segment">
      <div class="ui statistic">
        <div class="number"><%= @tasks.size %></div>
        <div class="description">相关任务</div>
      </div>
      <div class="ui divided selection list square center">
        <% @tasks.each do |task| %>
           <%= link_to task.title, task_path(task), class: 'item' %>
        <% end %>
      </div>
    </div>

    <div class="ui stacked segment">
      <div class="ui statistic">
        <div class="number"><%= @attachments.size %></div>
        <div class="description">相关附件</div>
      </div>
      <div class="ui divided selection list square center" data-no-turbolink>
        <% @attachments.each do |attach| %>
            <%= link_to attach.file.file.filename, download_attachment_path(attach), class: 'item req_log' %>
        <% end %>
        <%= link_to '上传附件', new_attach_album_path(@album) , class: 'item', id: 'for_newattach' %>
      </div>
    </div>
  </div>
</div>