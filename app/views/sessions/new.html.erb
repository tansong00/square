<div class="ui form">
  <%= form_tag sessions_path, autocomplete: 'off' do %>
      <div class="field">
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username], placeholder: 'username' %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="inline field">
        <div class="ui checkbox">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>
      </div>

      <div class="square center">
        <%= link_to '注册', new_user_path, class: 'square button middle w' %>
        <%= submit_tag '登 录', class: 'square button middle ok' %>
      </div>
  <% end %>
</div>